import XCTest
@testable import ToDo_List

// MARK: - Tests
final class TodosInteractorTests: XCTestCase {

    var sut: TodosInteractor!
    var network: MockNetwork!
    var coreData: MockCoreData!
    var output: MockOutput!

    override func setUp() {
        super.setUp()
        network = MockNetwork()
        coreData = MockCoreData()
        output = MockOutput()
        sut = TodosInteractor(network: network, coreData: coreData)
        sut.output = output
    }

    override func tearDown() {
        sut = nil
        network = nil
        coreData = nil
        output = nil
        super.tearDown()
    }

    // MARK: - Tests
    func test_fetch_shouldLoadFromAPI_whenFirstLaunch() {
        sut.fetch()
        XCTAssertTrue(network.getTodosCalled)
    }
}
